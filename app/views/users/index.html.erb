<div>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-info" %>
    <% end %>
</div>

<div class="container">
<h4> Import Data</h4>
<%= form_tag import_users_path, multipart: true do %>
<%= file_field_tag :file %><br>
<%= submit_tag "Import", :class => "btn btn-primary"%>
<% end %>
</div>
<br>

<div class="container">
<table id="example" class="table table-striped table-bordered" style="width:100%">
 	<thead>
	  	<tr> 
		  <th>Login</th>
		  <th>Password</th>
		  <th>Title</th>
		  <th>Lastname</th>
		  <th>firstname</th>
		  <th>Gender</th>
		  <th>Email</th>
		  <th>Picture</th>
		  <th>Address</th>
	   </tr>
    </thead> 
    <% @users.each do |user| %>  
	    <tr>
	    <td><%= user.login %></td>
	    <td><%= user.password %></td>
	    <td><%= user.title %></td>
	    <td><%= user.lastname %></td>
	    <td><%= user.firstname%></td>
	    <td><%= user.gender%></td>
	    <td><%= user.email%></td>
	    <% if user.picture.present? %>
	    <td><img style= "width:20%" src=<%= user.picture %></td> 
	    <%else %>
	    <td> </td>
        <% end %>
	    <td><%= user.address %></td>
	    </tr>
    <% end %>
</table>

<%= will_paginate @users %>

</div>



<script type="text/javascript">
	 $(document).ready(function() {
    $('#example').DataTable();
} );
</script>
  

